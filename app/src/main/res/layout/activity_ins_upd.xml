<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsUpdActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="353dp"
        android:layout_height="46dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="23dp"
        android:gravity="center"
        android:text="CAP NHAT DANH BA"
        android:textColor="#673AB7"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etTen"
        android:layout_width="351dp"
        android:layout_height="68dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="nhap ten"
        android:inputType="textPersonName"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/etDienThoai"
        android:layout_width="354dp"
        android:layout_height="67dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:hint="nhap so dien thoai"
        android:inputType="phone"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTen" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDienThoai">

        <Button
            android:id="@+id/btnLuu"
            android:layout_width="80dp"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="LUU"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDong"
            android:layout_width="80dp"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="DONG"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>